FROM ubuntu:16.04

RUN apt-get update && \
apt-get install -y \
git \
curl

RUN curl -sL https://deb.nodesource.com/setup_lts.x | bash -

RUN apt-get install -y \
nodejs \
make 

RUN git clone https://github.com/UnicornTranscoder/UnicornLoadBalancer.git && \
cd UnicornLoadBalancer && \
npm install --build-from-source
